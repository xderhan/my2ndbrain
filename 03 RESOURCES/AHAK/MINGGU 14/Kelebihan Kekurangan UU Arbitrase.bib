 pages = {55-69},
 publication_type = {article},
 title = {Comparative study of the implementation of alternative disputes resolution (adr) in tax and customs disputes in indonesia},
 volume = {1},
 year = {2022}
}

@article{Dadin_Solihin_2024,
 abstract = {This research is based on the numerous disputes in Sharia economic law within Sharia Business Financial Institutions, legal aid in the field of Sharia economic law, and civil matters that have not been well resolved. The Regulation of the Supreme Court of the Republic of Indonesia (PERMA RI) No. 4 of 2019 regulates the resolution of Sharia economic law disputes in a simplified manner. However, the socialization of this regulation to the public is still lacking, causing frequent obstacles in the implementation of this PERMA RI. This research is a literature study with a juridical approach aimed at analyzing the implementation of PERMA RI in the resolution of Sharia economic cases. The primary data in this research includes PERMA RI No. 4 of 2019, PERMA RI No. 14 of 2016, PERMA RI No. 2 of 2015, and PERMA RI No. 1 of 2016. Several relevant cases are used as important data to analyze the implementation of these regulations. The results of this research show that the process of simplified lawsuits in the resolution of Sharia economic disputes, which is expected to be easier, faster, and cheaper in court, has not been realized in accordance with PERMA RI. This needs to be a concern for the Supreme Court because most Sharia economic dispute cases involve companies and the public. If the Supreme Court regulations are not properly implemented in court proceedings, it will create a space for injustice. Therefore, the socialization of these Supreme Court regulations needs to be enhanced by academics and practitioners so that their implementation in the future can be�better. },
 annote = {Insights: Makalah ini tidak secara khusus mengevaluasi kelemahan dan keuntungan dari Undang-Undang Arbitrase dan Penyelesaian Sengketa Alternatif (UU No. 30/1999). Namun, hal ini menyoroti bahwa pelaksanaan PERMA RI No. 4 Tahun 2019 untuk tuntutan hukum yang disederhanakan dalam sengketa ekonomi Syariah belum terwujud secara efektif, menunjukkan adanya kelemahan dalam sosialisasi dan eksekusi. Keuntungan dari peraturan tersebut bertujuan untuk penyelesaian sengketa yang lebih mudah, lebih cepat, dan lebih murah, yang tetap tidak terpenuhi, memerlukan implementasi dan kesadaran yang lebih baik di antara para pemangku kepentingan. || 
Methods Used: - Penelitian ini menggunakan metodologi empiris yuridis dengan pendekatan kualitatif, mengintegrasikan pendekatan konseptual terhadap hukum, yang berfokus pada tatanan hukum positif tertulis dan penerapannya dalam konteks perselisihan hukum ekonomi Syariah.

- Data primer bersumber dari berbagai peraturan Mahkamah Agung (PERMA RI No. 4 Tahun 2019, PERMA RI No. 14 Tahun 2016, PERMA RI No. 2 Tahun 2015, dan PERMA RI No. 1 Tahun 2016), sedangkan data sekunder dikumpulkan dari beragam referensi dan jurnal, memanfaatkan model interaktif untuk analisis dan kerangka analisis normatif untuk mempelajari peraturan hukum terkait kasus kontrak di Lembaga Keuangan Islam. || 
Findings: - Temuan penelitian menunjukkan bahwa proses tuntutan hukum yang disederhanakan dalam penyelesaian sengketa ekonomi Syariah belum terwujud secara efektif sebagaimana dimaksud oleh PERMA RI No. 4 Tahun 2019, yang dirancang untuk membuat proses hukum lebih mudah, lebih cepat, dan lebih murah. Kekurangan ini menyoroti perlunya Mahkamah Agung untuk mengatasi masalah implementasi untuk mencegah ketidakadilan dalam kasus-kasus yang melibatkan perusahaan dan publik.

- Studi ini menekankan perlunya peningkatan sosialisasi peraturan Mahkamah Agung di antara akademisi dan praktisi untuk meningkatkan implementasi peraturan ini di masa depan dalam proses pengadilan, memastikan bahwa manfaat yang dimaksudkan dari tuntutan hukum yang disederhanakan tercapai bagi pihak yang bergugat dalam sengketa hukum ekonomi Syariah. || 
Research Gap: - Penelitian ini menyoroti kesenjangan yang signifikan dalam sosialisasi dan kesadaran masyarakat PERMA RI No. 4 tahun 2019, yang mengatur tuntutan hukum yang disederhanakan dalam sengketa hukum ekonomi Syariah. Kurangnya sosialisasi ini sering menimbulkan hambatan dalam pelaksanaan peraturan ini, menunjukkan perlunya upaya komunikasi dan pendidikan yang ditingkatkan oleh akademisi dan praktisi untuk memastikan pemahaman dan penerapan yang lebih baik dalam proses pengadilan.

- Studi ini menunjukkan bahwa hasil yang diharapkan dari tuntutan hukum yang disederhanakan — yaitu, bahwa mereka akan lebih mudah, lebih cepat, dan lebih murah — belum terwujud dalam praktik. Kesenjangan ini menunjukkan bahwa ada masalah sistemik dalam proses peradilan yang menghambat implementasi efektif peraturan ini, yang dapat menyebabkan ketidakadilan, terutama dalam kasus-kasus yang melibatkan perusahaan dan publik. || 
Results: - Penelitian menunjukkan bahwa proses tuntutan hukum yang disederhanakan dalam penyelesaian sengketa ekonomi Syariah belum terwujud secara efektif sebagaimana dimaksudkan oleh PERMA RI, sehingga menimbulkan tantangan dalam mencapai tujuan proses pengadilan yang lebih mudah, lebih cepat, dan lebih murah.

- Ini menyoroti perlunya Mahkamah Agung untuk meningkatkan sosialisasi peraturannya, karena implementasi yang tidak memadai dalam proses pengadilan dapat mengakibatkan ketidakadilan, terutama mempengaruhi kasus-kasus yang melibatkan perusahaan dan publik di ranah hukum ekonomi Syariah. || 
Limitations: - Sosialisasi Peraturan Mahkamah Agung (PERMA RI No. 4 Tahun 2019) mengenai tuntutan hukum yang disederhanakan dalam hukum ekonomi Syariah masih kurang, yang menyebabkan seringnya hambatan dalam pelaksanaannya. Penyebaran informasi yang tidak memadai ini menghambat pemahaman dan akses publik ke proses penyelesaian sengketa yang disederhanakan.

- Hasil yang diharapkan dari tuntutan hukum yang disederhanakan—yaitu, bahwa mereka akan lebih mudah, lebih cepat, dan lebih murah—belum terwujud dalam praktik. Kegagalan untuk menerapkan peraturan ini secara efektif menciptakan potensi ketidakadilan, terutama karena banyak perselisihan ekonomi Syariah melibatkan perusahaan dan masyarakat. || 
Dependent Variables: - Studi ini berfokus pada implementasi PERMA RI No. 4 Tahun 2019, yang mengatur penyelesaian sengketa hukum ekonomi Syariah secara sederhana, sebagai variabel dependen. Efektivitas peraturan ini dalam mencapai proses pengadilan yang lebih mudah, lebih cepat, dan lebih murah untuk sengketa ekonomi Syariah dianalisis.

- Variabel dependen lainnya adalah sosialisasi peraturan Mahkamah Agung di antara masyarakat dan praktisi hukum, yang sangat penting untuk keberhasilan pelaksanaan tuntutan hukum yang disederhanakan. Studi ini meneliti bagaimana kurangnya sosialisasi berkontribusi terhadap hambatan dalam penyelesaian sengketa hukum ekonomi Syariah. || 
Independent Variables:  || 
Problem Statement: - Makalah ini membahas masalah banyak perselisihan yang belum terselesaikan dalam hukum ekonomi Syariah, khususnya di Lembaga Keuangan Bisnis Syariah, menyoroti ketidakcukupan bantuan hukum di bidang ini dan masalah sipil yang masih belum ditangani dengan baik.

- Ditekankan bahwa meskipun diperkenalkannya PERMA RI No. 4 Tahun 2019, yang bertujuan untuk menyederhanakan penyelesaian sengketa hukum ekonomi Syariah, kurangnya sosialisasi yang efektif dan implementasi peraturan ini telah menimbulkan hambatan dalam mencapai hasil yang diinginkan dari proses pengadilan yang lebih mudah, lebih cepat, dan lebih murah. },
 authors = {Dadin Solihin and . Setiadi and Bubun Bunyamin and Deni Kamaludin Yusup and Ahmad Ridwan},
 doi = {10.30659/jua.v6i1.37265},
 journal = {Ulul Albab},
 number = {1},
