 publication_type = {article},
 title = {Alternatif Penyelesaian Sengketa Secara Arbitrase Melalui Pemanfaatan Teknologi Informasi},
 url = {http://jurnal.umsu.ac.id/index.php/delegalata/article/download/3171/2888},
